<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.javacode.mapper.IllnessMapper">
  
  <select id="findByName" resultType="com.javacode.entity.Illness">
    select * from illness where 1=1
    <if test="name !=null and name !='all' and name !=''">
      and `name` = #{name}
    </if>
    <if test="id !=null and id != ''">
      and `id`=#{id}
    </if>
  </select>

  <select id="checkRepeat" resultType="java.lang.Integer">
    select count(*) from illness where ${column} = #{value}
  </select>

</mapper>