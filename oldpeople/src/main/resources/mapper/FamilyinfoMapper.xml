<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.javacode.mapper.FamilyinfoMapper">

  <select id="findByName" resultType="com.javacode.entity.Familyinfo">
    select *,
    (select GROUP_CONCAT(o.name SEPARATOR ', ')
    from oldinfo o
    where FIND_IN_SET(o.id, REPLACE(REPLACE(REPLACE(f.oldlist, '[', ''), ']', ''), ' ', '')) > 0
    ) as oldname
    from familyinfo f
    where 1=1
    <if test="name !=null and name !='all' and name !=''">
      and `name` = #{name}
    </if>
  </select>

  <select id="checkRepeat" resultType="java.lang.Integer">
    select count(*) from familyinfo where ${column} = #{value}
  </select>

  <select id="findByUserId" resultType="com.javacode.entity.Familyinfo">
    SELECT * FROM familyinfo WHERE fno = #{userId}
  </select>

</mapper>