<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.javacode.mapper.NoticeMapper">
  <select id="findByTitle" resultType="com.javacode.entity.Notice">
    select * from notice where 1=1
    <if test="title !=null and title !='all' and title !=''">
      and `title` like concat('%',#{title},'%')
    </if>
    order by `time` desc
  </select>
  <select id="findByDiseaseName" resultType="com.javacode.entity.Notice">
    SELECT n.*
    FROM notice n
    WHERE n.title LIKE CONCAT('%', #{diseaseName}, '%')
  </select>

</mapper>